 @model Animal
@{
    ViewBag.Title = "Animal Details";
}
<h3 class="text-center mt-5 text-primary">Animal Details</h3>

<div class="container my-5">
    <div class="card shadow-lg">
        <div class="card-body">
            <h4 class="card-title text-center text-info mb-4">
                <i class="fas fa-paw me-2"></i>@Model.Name
            </h4>
            <hr />

            <p class="card-text">
                <strong><i class="fas fa-clock me-2"></i>LifeSpan:</strong> @Model.LifeSpan
            </p>
            <p class="card-text">
                <strong><i class="fas fa-birthday-cake me-2"></i>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()
            </p>
            <p class="card-text">
                <strong><i class="fas fa-info-circle me-2"></i>Description:</strong> @Model.Description
            </p>
        </div>
        <div class="card-footer text-right bg-white">
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left me-2"></i>Go Back
            </a>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        border: 1px solid #f0f0f0;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .card-text {
        font-size: 1.1rem;
    }

    .container {
        max-width: 600px;
    }

    i {
        color: #007bff;
    }

    .btn-outline-primary {
        border-color: #007bff;
        color: #007bff;
    }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: #fff;
        }
</style>
